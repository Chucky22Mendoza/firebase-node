<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h2>TASKS</h2>
        </div>
        <div class="card-body">
            <form action="/new-contact" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="Firstname" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" placeholder="Lastname" class="form-control">
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="email6545@example.com" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="phone" placeholder="Phone Number" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">SAVE</button>
                </div>
            </form>
        </div>
        <div class="card-footer">
            {{#if contacts}}
                <ul class="list-group">
                {{#each contacts}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{firstname}} /
                        {{lastname}} /
                        {{email}} /
                        {{phone}}
                        <a href="/delete-contact/{{@key}}" class="btn btn-danger">Delete</a>
                    </li>
                {{/each}}
                </ul>
            {{else}}
                <p>No contacts yet</p>
            {{/if}}
        </div>
    </div>
</div>